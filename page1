  <script>
    function startQuiz() {
      const name = document.getElementById("playerName").value.trim();
      if (!name) {
        alert("Please enter your name before starting the quiz.");
        return;
      }

      localStorage.setItem("playerName", name);
      window.location.href = "q1.html";
    }
  </script>
